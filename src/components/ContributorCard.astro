---
import { Icon } from '@astrojs/starlight/components';
import QuoteIcon from '../assets/double-quotes-r.svg?raw';

export interface Props {
  username: string;
  contribution: string;
}

const { username, contribution } = Astro.props;

// Получаем данные с GitHub API
let userData = null;
try {
  const response = await fetch(`https://api.github.com/users/${username}`);
  if (response.ok) {
    userData = await response.json();
  }
} catch (error) {
  console.error(`Failed to fetch data for ${username}:`, error);
}

const name = userData?.name || username;
const bio = userData?.bio || 'I use @meowrch';
const avatarUrl = userData?.avatar_url || `https://github.com/${username}.png?size=128`;
---

<div class="contributor-card">
  <div 
    class="contributor-card-inner tilt-element"
    data-tilt
    data-tilt-max="6"
    data-tilt-speed="2000"
    data-tilt-glare
    data-tilt-max-glare="0.4"
  >
    <article class="card">
      <!-- Верхний блок: аватарка слева, имя/username справа -->
      <div class="user-block">
        <div class="avatar">
          <img 
            src={avatarUrl} 
            alt={`${name} avatar`}
            loading="lazy"
          />
        </div>
        <div class="user-info">
          <div class="name-line">
            <a href={`https://github.com/${username}`} target="_blank" rel="noopener noreferrer" class="name">
              {name}
            </a>
            <span class="username">@{username}</span>
          </div>
          <div class="status">{bio}</div>
        </div>
      </div>
      
      <!-- Нижний блок: цитата с благодарностью -->
      <div class="quote-block">
        <div class="quote-icon" set:html={QuoteIcon}></div>
        {contribution}
      </div>
    </article>
  </div>
</div>

<style>
  .contributor-card {
    height: 100%;
  }

  .contributor-card-inner {
    height: 100% !important;
    width: 100% !important;
  }

  .card {
    border: 1px solid var(--ctp-surface2);
    background: var(--card-background);
    backdrop-filter: blur(16px);
    padding: 1.5rem;
    border-radius: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
    min-height: 120px;
    transition: all 0.3s ease;
  }

  .card:hover {
    border-color: var(--ctp-mauve);
    transform: translateY(-4px);
    background: var(--card-background-hover);
  }

  /* Верхний блок: аватарка слева, информация справа */
  .user-block {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  .avatar {
    flex-shrink: 0;
  }

  .avatar img {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    border: 2px solid var(--ctp-surface0);
    transition: all 0.3s ease;
  }

  .card:hover .avatar img {
    border-color: var(--ctp-mauve);
    transform: scale(1.05);
  }

  .user-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .name-line {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.1rem;
  }

  .name {
    color: var(--ctp-text);
    font-weight: bold;
    font-size: 1.1rem;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .name:hover {
    color: var(--ctp-mauve);
  }

  .username {
    color: var(--ctp-subtext1);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .status {
    color: var(--ctp-subtext0);
    font-size: 0.85rem;
    line-height: 1.3;
    font-style: italic;
  }

  /* Нижний блок: цитата */
  .quote-block {
    position: relative;
    background: linear-gradient(135deg, var(--ctp-surface0), var(--ctp-surface1));
    border-radius: 8px;
    padding: 0.75rem;
    border-left: 3px solid var(--ctp-mauve);
    color: var(--ctp-subtext1);
    font-size: 0.9rem;
    line-height: 1.4;
    font-style: italic;
  }

  .quote-icon {
    position: absolute;
    top: -8px;
    right: 8px;
    width: 20px;
    height: 20px;
    opacity: 0.7;
  }

  .quote-icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: var(--ctp-mauve) !important;
  }
  
  .quote-icon :global(svg path:not([fill="none"])) {
    fill: var(--ctp-mauve) !important;
  }

  /* Отменяем ненужный margin от Starlight для карточек благодарности */
  .contributor-card :not(a, strong, em, del, span, input, code, br) + :not(a, strong, em, del, span, input, code, br) {
    margin-top: 0 !important;
  }

:root {
  --card-background: rgba(49, 50, 68, 0.7);
  --card-background-hover: rgba(49, 50, 68, 0.9);
}

:root[data-theme="light"] {
  --card-background: #DCE0E8;
  --card-background-hover: #E5E9F0;
}

  .icon {
    color: #ffffff;
    padding: 0.5rem;
    border-radius: 0.5rem;
    font-size: 1.2em;
    font-weight: bold;
    min-width: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon.contributor {
    background: linear-gradient(45deg, var(--ctp-red), var(--ctp-pink));
  }

@media (max-width: 768px) {
  .card {
    padding: 1rem;
  }
  
  .user-block {
    gap: 0.75rem;
  }
  
  .avatar img {
    width: 50px;
    height: 50px;
  }
  
  .name {
    font-size: 1rem;
  }
  
  .username {
    font-size: 0.8rem;
  }
  
  .status {
    font-size: 0.8rem;
  }
  
  .quote-block {
    font-size: 0.85rem;
    padding: 0.6rem;
  }
}
</style>
